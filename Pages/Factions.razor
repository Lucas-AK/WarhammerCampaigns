@page "/factions"
@using WarhammerCampaigns.Data.Factions

<PageTitle>Factions</PageTitle>

<style>
    .page-wrapper {
        padding: 1rem;
        height: 100%;
    }

    .faction-cards {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(500px, 5fr));
        height: 85vh;
        gap: 2rem;
    }

    .mainFaction-box {
        display: flex;
        flex-direction: column;
        justify-content: center;
        align-items: center;
        padding: 3rem;
        height: 100%; /* Start with a height of 0 */
        width: 100%;
        background-size: cover;
        background-color: black;
        color: white;
        cursor: pointer;
        position: relative;
        transition: transform 500ms;
    }

    .mainFaction-box:hover
    {
        transform: translateY(10px);
    }

    .xeno-faction-cards, .imperial-faction-cards, .chaos-faction-cards {
        display: none; /* Initially hide sub-faction containers */
    }

    .subFaction-box {
        transform: translateY(100%); /* Start with the sub-faction boxes below the view */
        transition: transform 500ms, opacity 500ms;
        opacity: 0; /* Start with opacity 0 */
    }

    .overlay {
        background-color: black;
        opacity: 0.5;
        position: absolute;
        width: 100%;
        height: 100%;
        transform: 1s;
    }

    .overlay:hover
    {
        background: radial-gradient(circle at center, rgba(0, 0, 0, 0) 50%, rgba(0, 0, 0, 0.5) 70%);
    }
    h4.faction-name {
        text-align: center;
        font-size: 3rem;
        z-index: 1;
    }

    .page-title {
        text-align: center;
    }


</style>

<div class="page-title">
    <h3>Choose your faction</h3>
</div>

<div class="faction-cards">
    @foreach (var mainfaction in mainFactions)
    {
        <a @onclick="() => factionChanger(mainfaction)">
            <div class="mainFaction-box" style="background-image: url('@mainfaction.Image')">
                <h4 class="faction-name">@mainfaction.FactionName</h4>
                <div class="overlay"></div>
            </div>
        </a>
    }
</div>
<div class="xeno-faction-cards">
    @foreach (var faction in factions)
    {
        if (faction.Type == FactionType.Xeno)
        {
            <div class="subFaction-box" style="background-image: url('@faction.Image')">
                <h4 class="faction-name">@faction.FactionName</h4>
                <div class="overlay"></div>
            </div>
        }
    }
</div>

<div class="imperial-faction-cards">
    @foreach (var faction in factions)
    {
        if (faction.Type == FactionType.Imperial)
        {
            <div class="subFaction-box" style="background-image: url('@faction.Image')">
                <h4 class="faction-name">@faction.FactionName</h4>
                <div class="overlay"></div>
            </div>
        }
    }
</div>

<div class="chaos-faction-cards">
    @foreach (var faction in factions)
    {
        if (faction.Type == FactionType.Chaos)
        {
            <div class="subFaction-box" style="background-image: url('@faction.Image')">
                <h4 class="faction-name">@faction.FactionName</h4>
                <div class="overlay"></div>
            </div>
        }
    }
</div>


