    @page "/test_page"

    <PageTitle>Test</PageTitle>

    <style>
        .test_box
        {
            width: 100px;
            height: 100px;
            background-color: red;
            display: block; /* Initially set to "block" */
            opacity: @boxOpacity;
            transition: opacity 0.5s ease-in-out;
            animation: flyOut 0.5s ease-in-out both, flyIn 0.5s ease-in-out both;
        }

    </style>

    <div class="test_box">
        <h1>Hello world</h1>
    </div>

    <button @onclick="toggleVisibility">Toggle Visibility</button>

    @code {
        private bool isBoxVisible = true;
        private double boxOpacity = 1.0;

        private void toggleVisibility()
        {
            isBoxVisible = !isBoxVisible;
            boxOpacity = isBoxVisible ? 1.0 : 0.0;
        }
    }
